@model sqlQuanLiBanHang.Employee

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sửa thông tin</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.IDEmployee)

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeName, new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmployeeName)
                @Html.ValidationMessageFor(model => model.EmployeeName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AddressEmployee, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AddressEmployee)
                @Html.ValidationMessageFor(model => model.AddressEmployee)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaxDebt, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxDebt)
                @Html.ValidationMessageFor(model => model.MaxDebt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaxReceive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxReceive)
                @Html.ValidationMessageFor(model => model.MaxReceive)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StatusEmployee, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.StatusEmployee)*@
                @Html.ValidationMessageFor(model => model.StatusEmployee)

                @{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Đang hoạt động",
        Value = "DHD"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Ngưng hoạt động",
        Value = "NHD"
    });
                }
                @Html.DropDownList("StatusEmployee", listItems, new { @class = "control-label col-md-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionEmployee, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescriptionEmployee)
                @Html.ValidationMessageFor(model => model.DescriptionEmployee)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác nhận" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
