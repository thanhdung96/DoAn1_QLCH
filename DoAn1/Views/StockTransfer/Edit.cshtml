@model sqlQuanLiBanHang.StockTransfer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>StockTransfer</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.TransID)

        <div class="form-group">
            @Html.LabelFor(model => model.FromStockID, "FromStockID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FromStockID", String.Empty)
                @Html.ValidationMessageFor(model => model.FromStockID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToStockID, "ToStockID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ToStockID", String.Empty)
                @Html.ValidationMessageFor(model => model.ToStockID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TransDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TransDate)
                @Html.ValidationMessageFor(model => model.TransDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TotalAmt, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TotalAmt)
                @Html.ValidationMessageFor(model => model.TotalAmt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descript, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descript)
                @Html.ValidationMessageFor(model => model.Descript)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
