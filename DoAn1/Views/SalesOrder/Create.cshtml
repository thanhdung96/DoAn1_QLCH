@model sqlQuanLiBanHang.SalesOrder

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thêm hóa đơn bán hàng mới</h4>
        <hr />
        @Html.ValidationSummary(true)

 
        <div class="form-group">
            @Html.LabelFor(model => model.OrderNo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OrderNo, new { @Value = ViewBag.OrderNo, @readonly = "readonly"})
                @Html.ValidationMessageFor(model => model.OrderNo)
            </div>
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.OrderDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OrderDate)
                @Html.ValidationMessageFor(model => model.OrderDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDEmployee, "IDEmployee", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDEmployee", String.Empty)
                @Html.ValidationMessageFor(model => model.IDEmployee)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustID, "CustID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CustID", String.Empty)
                @Html.ValidationMessageFor(model => model.CustID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
