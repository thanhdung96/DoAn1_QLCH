                @Html.DropDownList("CustID", String.Empty)
                @Html.ValidationMessageFor(model => model.CustID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SalesPersonID, "SalesPersonID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SalesPersonID", String.Empty)
                @Html.ValidationMessageFor(model => model.SalesPersonID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PaymentDate)
                @Html.ValidationMessageFor(model => model.PaymentDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentAmt, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PaymentAmt)
                @Html.ValidationMessageFor(model => model.PaymentAmt)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descript, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descript)
                @Html.ValidationMessageFor(model => model.Descript)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
