@*@model IEnumerable<sqlQuanLiBanHang.UserName>*@
@using DoAn1.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<sqlQuanLiBanHang.UserName>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Danh sách tài khoản đăng nhập</h2>
@using (Html.BeginForm("Index", "UserName", FormMethod.Post, new { @class = "navbar-form navbar-right", id = "search-form", onsubmit = "return empty(); " }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Tìm tài khoản" name="searchTerm" value="@ViewBag.searchTerm" id="searhc-box">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default hidden-xs"><i class="glyphicon glyphicon-search"></i></button>
    </div>
}

<p>
    @Html.ActionLink("Thêm tài khoản", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Username1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Password_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Roles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaNV)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password_)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNV)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Username1 }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Username1 }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Username1 })
        </td>
    </tr>
}

</table>

<div style="text-align:right">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>