@model sqlQuanLiBanHang.Stock

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Stock</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StockID)

        <div class="form-group">
            @Html.LabelFor(model => model.StockDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StockDate)
                @Html.ValidationMessageFor(model => model.StockDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoteStock, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoteStock)
                @Html.ValidationMessageFor(model => model.NoteStock)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InvtID, "InvtID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("InvtID", String.Empty)
                @Html.ValidationMessageFor(model => model.InvtID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UnitID_Stock, "UnitID_Stock", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UnitID_Stock", String.Empty)
                @Html.ValidationMessageFor(model => model.UnitID_Stock)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
